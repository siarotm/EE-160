#CP 7

num = int(input())

count = 0
total = 0

while num != -999:
    total += num
    count += 1
    num = int(input())
if count == 0:
    print('The average of 0 numbers is 0')
else:
    print(f'The average of {count} numbers is {total/count:.2f}')


cont = 'yes'
while cont: == 'yes':
    #####
